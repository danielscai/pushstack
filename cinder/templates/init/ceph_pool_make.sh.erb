#!/bin/bash

ceph osd pool create <%= scope.lookupvar('openstack::params::glance_pool') %> 128
ceph osd pool create <%= scope.lookupvar('openstack::params::cinder_pool') %> 128

ceph osd pool set <%= scope.lookupvar('openstack::params::glance_pool') %> size 3
ceph osd pool set <%= scope.lookupvar('openstack::params::cinder_pool') %> size 3
