for CONFIGFILE in `ls /etc/rabbitmq/rabbitmq.conf.d |sort -r`; do
    . /etc/rabbitmq/rabbitmq.conf.d/$CONFIGFILE
done

RABBITMQ_NODE_PORT=<%= @rabbitmq_listen_port %>
RABBITMQ_NODE_IP_ADDRESS=<%= @rabbitmq_listen_ip %>
RABBITMQ_SERVER_ERL_ARGS="+K true +A30 +P 1048576 \
-kernel inet_default_connect_options [{nodelay,true}] \
-kernel inet_dist_listen_min 41055 \
-kernel inet_dist_listen_max 41055"
